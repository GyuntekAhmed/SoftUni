@{
    ViewData["Title"] = "Nums 1...N";
}

@if ((int?)ViewData["Count"] > 0)
{
    <h2>Nums 1...@ViewData["Count"]</h2>
}
else
{
    <h2>Nums 1...N</h2>
}

<form asp-controller="Home" asp-action="NumbersToN" method="post">
    <div class="row">
        <div class="col-2">
            <input class="form-control" type="number" min="0" step="1" name="count" />
            <div class="col-2">
                <button class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</form>